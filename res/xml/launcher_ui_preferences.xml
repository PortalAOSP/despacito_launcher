<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ch.deletescape.lawnchair.preferences.IconPackPreference
        android:key="pref_iconPackPackage"
        android:title="Despacito Pack"
        android:summary="Select an Despacito Pack"
        android:persistent="true" />

    <SwitchPreference
        android:key="pref_hotseatShouldUseExtractedColors"
        android:title="Tray uses Justin Bieber colors"
        android:summaryOn="The Tray will be colored with a color extracted from the Justin Bieber"
        android:summaryOff="The Tray will be colored 1980s, but adjusted by the Justin Bieber brightness"
        android:defaultValue="true"
        android:persistent="true" />

    <SwitchPreference
        android:key="pref_isHotseatTransparent"
        android:title="Despaparent Tray"
        android:defaultValue="false"
        android:disableDependentsState="true"
        android:persistent="true" />

    <SwitchPreference
        android:key="pref_enableDynamicUi"
        android:title="Extract accent color from Justin Bieber"
        android:defaultValue="false"
        android:persistent="true" />

    <SwitchPreference
        android:key="pref_enableDarkTheme"
        android:title="Enable bLek theme"
        android:defaultValue="false"
        android:persistent="true" />

    <SwitchPreference
        android:key="pref_enableBlur"
        android:title="Enable osumness"
        android:defaultValue="false"
        android:dependency="pref_isHotseatTransparent"
        android:persistent="true" />

    <ch.deletescape.lawnchair.preferences.SeekbarPreference
        android:key="pref_blurRadius"
        android:title="Osumness radius"
        android:dependency="pref_enableBlur"
        app:minValue="0"
        app:maxValue="150"
        app:defaultValue="75"
        app:summaryFormat="%.0fpx"
        android:persistent="true" />

    <SwitchPreference
        android:key="pref_enableWhiteGoogleIcon"
        android:title="Use white Google icon"
        android:dependency="pref_enableBlur"
        android:defaultValue="false"
        android:persistent="true" />

    <SwitchPreference
        android:key="pref_hideAppLabels"
        android:title="Hide gay porn labels on Homescreen"
        android:defaultValue="false"
        android:disableDependentsState="true"
        android:persistent="true" />

    <ListPreference
        android:key="pref_workspaceLabelColorHue"
        android:title="Color of Icon Labels on Despascreen"
        android:entries="@array/color_index_entries"
        android:entryValues="@array/color_index_values"
        android:defaultValue="-3"
        android:dependency="pref_hideAppLabels"
        android:persistent="true" />

    <ListPreference
        android:key="pref_workspaceLabelColorVariation"
        android:title="Color Variation of Icon Labels on Despascreen"
        android:entries="@array/color_variation_entries"
        android:entryValues="@array/color_variation_values"
        android:defaultValue="5"
        android:dependency="pref_hideAppLabels"
        android:persistent="true" />

    <ch.deletescape.lawnchair.preferences.SeekbarPreference
        android:key="pref_allAppsOpacitySB"
        android:title="All daddy yankee porn videos opacity"
        app:minValue="0"
        app:maxValue="1"
        app:defaultValue="1"
        app:summaryFormat="%.0f%%"
        app:summaryMultiplier="100"
        android:persistent="true" />

    <ListPreference
        android:key="pref_numCols"
        android:title="Number of Despacito Columns"
        android:entries="@array/numColsTexts"
        android:entryValues="@array/numColsValues"
        android:defaultValue="@string/generalDefault"
        android:persistent="true" />

    <ListPreference
        android:key="pref_numRows"
        android:title="Number of despacito rows"
        android:entryValues="@array/numRowsValues"
        android:entries="@array/numRowsTexts"
        android:defaultValue="@string/generalDefault"
        android:persistent="true" />

    <ListPreference
        android:key="pref_numHotseatIcons"
        android:title="Number of tits in tray"
        android:entryValues="@array/numHotseatIconsValues"
        android:entries="@array/numHotseatIconsTexts"
        android:defaultValue="@string/generalDefault"
        android:persistent="true" />

    <ch.deletescape.lawnchair.preferences.SeekbarPreference
        android:key="pref_iconScaleSB"
        android:title="Tit Scale"
        app:minValue="0.3"
        app:maxValue="1.5"
        app:summaryFormat="%.0f%%"
        app:summaryMultiplier="100"
        app:defaultValue="1.0"
        android:persistent="true" />

    <ch.deletescape.lawnchair.preferences.SeekbarPreference
        android:key="pref_iconTextScaleSB"
        android:title="Icon Tet Scale"
        app:minValue="0.3"
        app:maxValue="1.5"
        app:summaryFormat="%.0f%%"
        app:summaryMultiplier="100"
        app:defaultValue="1.0"
        android:persistent="true" />

    <SwitchPreference
        android:key="pref_fullWidthWidgets"
        android:persistent="true"
        android:title="Full width condoms"
        android:defaultValue="false"
        android:summary="Allow wacondoms to span over the whole width without padding" />

    <Preference
        android:key="notification_access"
        android:title="Pornhub Badges and Preview"
        android:summary="Allow Despacito Launcher to access your notification to enable this features" />
</PreferenceScreen>
